<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/categoryLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/pizzaImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="5dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>
    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/pizzaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="92dp"
                android:text="Title"
                android:autoSizeMinTextSize="2sp"
                android:autoSizeMaxTextSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/pizzaImage"
                app:layout_constraintTop_toTopOf="parent">
            </TextView>


            <TextView
                android:id="@+id/pizzaDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Description"
                android:autoSizeMinTextSize="2sp"
                android:autoSizeMaxTextSize="30sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/pizzaImage"
                app:layout_constraintTop_toBottomOf="@+id/pizzaTitle">

            </TextView>

            <Button
                android:id="@+id/priceAndInfoButton"
                android:layout_width="85dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/lightgray"
                android:padding="0dp"
                android:text="text"
                android:autoSizeMinTextSize="2sp"
                android:autoSizeMaxTextSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/pizzaImage"
                app:layout_constraintTop_toBottomOf="@+id/pizzaDescription" />


        </LinearLayout>


    </LinearLayout>












</androidx.constraintlayout.widget.ConstraintLayout>